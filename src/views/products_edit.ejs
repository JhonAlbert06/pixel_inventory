<%- include('partials/_header.ejs') %>

    <div class="container mt-5">
        <h1>Product</h1>
        <div class="row mt-5">
            <div class="col-md-5">
                <div class="card">
                    <div class="card-header">
                        Update Product
                    </div>
                    <div class="card-body">

                        <br>
                        <form action="/products/update/<%= data.id %>" method="post">
                            <div class="mb-3">
                                <input type="text" name="name" value="<%= data.name %>" placeholder="Name"
                                    class="form-control">
                            </div>
                            <div class="mb-3">
                                <input type="text" name="description" value="<%= data.description %>"
                                    placeholder="Description" class="form-control">
                            </div>
                            <div class="mb-3">
                                <input type="number" name="price" value="<%= data.price %>" placeholder="Price"
                                    class="form-control">
                            </div>
                            <div class="mb-3">
                                <input type="number" name="quantity_in_stock" value="<%= data.quantity_in_stock %>"
                                    placeholder="Quantity" class="form-control">
                            </div>
                            <div class="mb-3">
                                <select class="form-select" id="category" name="category_id">
                                    <% categories.forEach(category=> { %>
                                        <option value="<%= category.id %>" <%=category.id===data.category_id
                                            ? 'selected' : '' %>>
                                            <%= category.name %>
                                        </option>
                                        <% }) %>
                                </select>

                            </div>
                            <button type="submit" class="btn btn-primary">Edit Product</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/_footer.ejs') %>