<%- include('partials/_header.ejs') %>

    <div class="container mt-5">
        <h1>Products</h1>
        <div class="row mt-5">
            <div class="col-md-8">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>nÂº</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Category</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach((product, index)=> { %>
                            <tr>
                                <td>
                                    <%= index + 1 %>
                                </td>
                                <td>
                                    <%= product.name %>
                                </td>
                                <td>
                                    <%= product.description %>
                                </td>
                                <td>
                                    <%= product.price %>
                                </td>
                                <td>
                                    <%= product.quantity_in_stock %>
                                </td>
                                <td>
                                    <%= categories.find(category=> category.id === product.category_id).name %>
                                <td>
                                    <a href="/products/edit/<%= product.id %>" class="btn btn-warning">
                                        <img src="https://img.icons8.com/ios-glyphs/30/000000/edit.png" width="20" />
                                    </a>
                                    <a href="/products/delete/<%= product.id %>" class="btn btn-danger">
                                        <img src="https://img.icons8.com/ios-glyphs/30/000000/delete-sign.png"
                                            width="20" />
                                    </a>
                                </td>
                            </tr>
                            <% }) %>

                    </tbody>
                </table>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        Add Product
                    </div>
                    <div class="card-body">
                        <form action="/products/add" method="post">
                            <div class="mb-3">
                                <input type="text" name="name" placeholder="Name" class="form-control">
                            </div>
                            <div class="mb-3">
                                <input type="text" name="description" placeholder="Description" class="form-control">
                            </div>
                            <div class="mb-3">
                                <input type="number" name="price" placeholder="Price" class="form-control">
                            </div>
                            <div class="mb-3">
                                <input type="number" name="quantity_in_stock" placeholder="Quantity"
                                    class="form-control">
                            </div>
                            <div class="mb-3">
                                <input type="number" name="min_stock" placeholder="Min Stock" class="form-control">
                            </div>
                            <div class="mb-3">
                                <input type="number" name="max_stock" placeholder="Max Stock" class="form-control">
                            </div>
                            <div class="mb-3">
                                <select class="form-select" id="category" name="category_id">
                                    <option selected>Category</option>
                                    <% categories.forEach(category=> { %>
                                        <option value="<%= category.id %>">
                                            <%= category.name %>
                                        </option>

                                        <% }) %>
                                </select>
                            </div>

                            <div class="col-md-6">
                                <button type="submit" class="btn btn-primary">Save Product</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/_footer.ejs') %>